{
  "kind": "Job",
  "apiVersion": "batch/v1",
  "metadata": {
    "name": "cmd-nfs-gcp",
    "creationTimestamp": null
  },
  "spec": {
    "parallelism": 3,
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "cmd-nfs-gcp"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "gcp-volume",
            "persistentVolumeClaim": {
              "claimName": "gcp-nfs-pvc",
              "readOnly": true
            }
          }
        ],
        "containers": [
          {
            "name": "cmd-nfs-gcp",
            "image": "sdeoras/token",
            "command": [
              "ls",
              "-la",
              "/mnt/nfs"
            ],
            "resources": {},
            "volumeMounts": [
              {
                "name": "gcp-volume",
                "readOnly": true,
                "mountPath": "/mnt/nfs"
              }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Never",
        "affinity": {
          "podAntiAffinity": {
            "requiredDuringSchedulingIgnoredDuringExecution": [
              {
                "labelSelector": {
                  "matchExpressions": [
                    {
                      "key": "app",
                      "operator": "In",
                      "values": [
                        "cmd-nfs-gcp"
                      ]
                    }
                  ]
                },
                "topologyKey": "kubernetes.io/hostname"
              }
            ]
          }
        }
      }
    }
  },
  "status": {}
}